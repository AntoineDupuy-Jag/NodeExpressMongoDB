                <input type="email" name="email" class="form-control">
            </div>
            <div>
                <label for="msg" class="form-label">Votre message :</label><br>
                <textarea name="msg" cols="33" rows="5" placeholder="Votre message ici..." class="form-control"></textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <a href="/" class="btn btn-secondary">Annuler</a>
                <a href="/deleteContact" class="btn btn-warning" style="margin-left:370px">Supprimer ses donn√©es</a>
